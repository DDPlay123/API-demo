<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.MainActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOpenAI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ui_openai"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnEdamam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEdamam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ui_edamam"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnGooglePlaces"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOpenAI" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGooglePlaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ui_places"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEdamam" />

</androidx.constraintlayout.widget.ConstraintLayout>